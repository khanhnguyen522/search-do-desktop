{
  "identifier": "desktop-capability",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main", "launcher"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "notification:default",
    "global-shortcut:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "open",
          "cmd": "open",
          "args": true
        }
      ]
    }
  ]
}
